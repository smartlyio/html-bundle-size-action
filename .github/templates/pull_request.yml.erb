name: "Pull Request"

on:
  pull_request:
    branches: [main]

jobs:
  @import ./jobs/build

  @import ./jobs/test

  release:
    runs-on: <%= ubuntu_version %>
    name: "Build and release action"
    needs: [build, test]
    steps:
      - uses: actions/checkout@v3
        with:
          fetch-depth: 0
          persist-credentials: true
      - name: Configure git
        run: |
          git config user.name "github-actions[bot]"
          git config user.email "41898282+github-actions[bot]@users.noreply.github.com"
      - name: Release flow
        uses: smartlyio/github-actions/release-action-node@24fe0d6d7b5590bff5da790db9947d263ecb1e86
        with:
          dry_run: true
          token: "${{ secrets.GITHUB_TOKEN }}"